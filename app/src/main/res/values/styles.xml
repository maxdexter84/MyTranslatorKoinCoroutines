<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="divider">@color/color_gray</item>
        <item name="bottomNavStyle">@style/BottomNavigationViewLight</item>
        <item name="headerTextStyle">@style/HeaderTextStyle</item>
        <item name="descriptionTextStyle">@style/DescriptionTextStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
    </style>


    <style name="AppThemeNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="colorSecondary">@color/colorAccentNight</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="divider">@color/color_grayNight</item>
        <item name="bottomNavStyle">@style/BottomNavigationViewDark</item>
        <item name="headerTextStyle">@style/HeaderTextStyleNight</item>
        <item name="descriptionTextStyle">@style/DescriptionTextStyleNight</item>
        <item name="editTextStyle">@style/EditTextStyleNight</item>
    </style>

    <style name="DividerLight">
        <item name="backgroundColor">@color/color_gray</item>
    </style>

    <style name="DividerNight">
        <item name="backgroundColor">@color/color_grayNight</item>
    </style>

    <style name="DescriptionTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextLightTheme</item>
    </style>

    <style name="DescriptionTextStyleNight">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorTextLightTheme</item>
    </style>
    <style name="HeaderTextStyleNight">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
    </style>





    <style name="BottomNavigationViewLight">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="itemIconTint">@color/colorIconLightTheme</item>
        <item name="itemTextColor">@color/colorTextLightTheme</item>
        <item name="itemTextAppearanceActive">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationViewDark">
        <item name="android:background">@color/colorPrimaryNight</item>
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="itemTextAppearanceActive">@color/colorAccentNight</item>
    </style>
    
    
    <style name="EditTextStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColorHint">@color/colorTextLightTheme</item>
        <item name="android:textColor">@color/colorTextLightTheme</item>
        <item name="colorOnSurface">@color/colorAccent</item>
    </style>

    <style name="EditTextStyleNight" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColorHint">@color/colorAccentNight</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorOnSurface">@color/colorAccentNight</item>
    </style>

</resources>